{
  "name": "tasks-events-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for tasks and events operations",
  "main": "apps/server/server.js",
  "type": "module",
  "engines": {
    "node": "^20 || >=20"
  },
  "scripts": {
    "start": "sh -c 'node apps/server/server.js'",
    "start:lan": "sh -c 'HOST=0.0.0.0 PORT=3000 node apps/server/server.js 2>&1 | tee -a server.log'",
    "dev": "nodemon apps/server/server.js",
    "test:unit": "node --test tests/unit",
    "test:integration": "node tests/run.js",
    "test:all": "node tests/all.js",
    "test": "node tests/all.js",
    "test:with-server": "node scripts/test_with_server.js",
    "test:coverage": "node --test --experimental-test-coverage tests/unit",
    "test:watch": "node --test --watch tests/unit",
    "db:dump": "node scripts/db_dump.js",
    "db:seed:tasks-events": "node scripts/seed_tasks_and_events.js"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "better-sqlite3": "^9.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "eslint": "^9.35.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "nodemon": "^3.0.1"
  }
}
