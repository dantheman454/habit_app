{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://local/habit_app/schema/tool_calls.schema.json",
  "title": "Tool Call Parser Output",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "tool": {
        "type": "string",
        "enum": ["create_todo", "list_todos", "get_todo", "update_todo", "delete_todo", "search_todos"]
      },
      "parameters": {
        "type": "object",
        "additionalProperties": {
          "anyOf": [
            { "type": "string" },
            { "type": "number" },
            { "type": "boolean" },
            { "type": "null" },
            { "type": "integer" }
          ]
        }
      },
      "parsing_errors": {
        "type": "array",
        "items": { "type": "string" }
      },
      "validation_errors": {
        "type": "array",
        "items": { "type": "string" }
      },
      "is_valid": { "type": "boolean" }
    },
    "required": ["tool", "parameters", "parsing_errors", "validation_errors", "is_valid"],
    "additionalProperties": true
  }
}



